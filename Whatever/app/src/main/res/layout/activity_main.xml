<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Classes Button-->
    <!--Assignments Button-->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which tasks would you like to manage?"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.179" />

    <Button
        android:id="@+id/classesButton"
        android:layout_width="164dp"
        android:layout_height="81dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:text="@string/classes"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/assignmentsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/assignmentsButton"
        android:layout_width="161dp"
        android:layout_height="76dp"
        android:text="@string/assignments"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toDoButton"
        app:layout_constraintVertical_bias="0.304" />

    <Button
        android:id="@+id/toDoButton"
        android:layout_width="163dp"
        android:layout_height="82dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="192dp"
        android:text="To-Do List"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeExamButton" />

    <Button
        android:id="@+id/homeExamButton"
        android:layout_width="161dp"
        android:layout_height="77dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="15dp"
        android:text="Exams"
        app:layout_constraintBottom_toTopOf="@+id/toDoButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assignmentsButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/notificationButton"
        android:layout_width="215dp"
        android:layout_height="75dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="48dp"
        android:text="Send Notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="213dp"
        android:layout_height="52dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="111dp"
        android:fontFamily="monospace"
        android:text="Welcome!"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/classesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
